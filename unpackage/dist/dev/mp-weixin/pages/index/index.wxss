
.content{
	width: 100%;
}
.header{
	width: 100%;
	height: 100rpx;
	background: #4759BD;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	    -ms-flex-pack: justify;
	        justify-content: space-between;
}
.header .title{
	font-size: 40rpx;
	color: #ffffff;
	line-height: 100rpx;
	margin-left: 30rpx;
}
.header .header_right{
	margin-right: 40rpx;
}
.header .search,.header .share{
	width: 40rpx;
	height: 40rpx;
}
.header .search{
	margin-right: 60rpx;
}
.button_line_top,.button_line_down{
	width: 80%;
	height: 60rpx;
	margin: 30rpx auto 0 auto;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	    -ms-flex-pack: justify;
	        justify-content: space-between;
	margin-top: 30rpx;
}
.button_style{
	display: block;
	width: 80rpx;
	background: #039B8C;
	line-height: 50rpx;
	color: #ffffff;
	border-radius: 4rpx;
	font-size: 28rpx;
	padding: 0 20rpx;
	text-align: center;
	margin: 40rpx auto;
}
.red_color{
	background: #EF4681;
}
.content_text{
	width: 70%;
	margin: 20rpx auto;
	padding-bottom: 50rpx;
	border-bottom: 1px solid #F0F0F0;
	font-size: 32rpx;
	line-height: 60rpx;
	color: #515151;
}

